@*@Html.DropDownList("Destination.State", (IEnumerable<SelectListItem>)ViewBag.AnnualLeaves)*@
<div id="NewData">
  <table class="table">
    <tr>
      <th>
        @Html.DisplayName("No")
      </th>
      <th>
        @Html.DisplayName("Date")
      </th>
      <th>
        @Html.DisplayName("Description")
      </th>
    </tr>
    @{
      int counter = 0;
      foreach (var item in ViewBag.AnnualLeaves)
      {

        <tr>
          <td style="display:none;"><input type="hidden" name="userLeavePolicy.Index" value="@(counter)" /></td>
          @*<td><input type="text" autocomplete="off" class="form-control" name="SaleOrderDetail[0].SalePrice" id="salePrice0"></td>*@
          <td><input type="text" autocomplete="off" class="form-control" name="id[@(counter)]" id="id@(counter)" value=@(item.Id)></td>
          <td><input type="text" autocomplete="off" class="form-control" name="AnnualOffDays[@(counter)]" id="AnnualOffDays@(counter)" value=@(item.LeaveDate)></td>
          <td><input type="text" autocomplete="off" class="form-control" name="Description[@(counter)]" id="Description@(counter)" value="@(item.Description)"></td>
        </tr>
        counter += 1;
      }
    }
  </table>
</div>
